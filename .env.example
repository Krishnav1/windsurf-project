# ==========================================
# ENVIRONMENT VARIABLES TEMPLATE
# ==========================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to git!

# ==========================================
# SUPABASE CONFIGURATION
# ==========================================
# Get these from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# ==========================================
# BLOCKCHAIN CONFIGURATION (Polygon Amoy Testnet)
# ==========================================
# Deployer wallet private key (KEEP SECRET!)
DEPLOYER_PRIVATE_KEY=your_private_key_here

# Deployer wallet address
DEPLOYER_ADDRESS=0xYourWalletAddressHere

# RPC URL for Polygon Amoy Testnet
NEXT_PUBLIC_RPC_URL=https://rpc-amoy.polygon.technology

# Chain ID (80002 for Polygon Amoy)
NEXT_PUBLIC_CHAIN_ID=80002

# ==========================================
# DEPLOYED CONTRACT ADDRESSES
# ==========================================
# These will be populated after first deployment
NEXT_PUBLIC_ERC3643_TOKEN_ADDRESS=
NEXT_PUBLIC_IDENTITY_REGISTRY_ADDRESS=
NEXT_PUBLIC_COMPLIANCE_ADDRESS=

# ==========================================
# JWT CONFIGURATION
# ==========================================
# Generate a random secret: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here_min_32_chars

# ==========================================
# PAYMENT GATEWAY (Optional)
# ==========================================
# Razorpay credentials (if using)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret

# ==========================================
# EMAIL SERVICE (Optional)
# ==========================================
# SendGrid API key (if using email notifications)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# ==========================================
# ALCHEMY (Optional - for better RPC)
# ==========================================
# Get from: https://dashboard.alchemy.com/
ALCHEMY_API_KEY=your_alchemy_api_key
NEXT_PUBLIC_ALCHEMY_RPC_URL=https://polygon-amoy.g.alchemy.com/v2/your_api_key

# ==========================================
# APPLICATION SETTINGS
# ==========================================
# Application URL (for production)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Environment (development, staging, production)
NODE_ENV=development

# ==========================================
# SECURITY SETTINGS
# ==========================================
# Enable/disable certain features
NEXT_PUBLIC_ENABLE_BLOCKCHAIN=true
NEXT_PUBLIC_ENABLE_PAYMENTS=false
NEXT_PUBLIC_ENABLE_EMAIL=false

# ==========================================
# NOTES:
# ==========================================
# 1. Copy this file to .env.local
# 2. Fill in all required values
# 3. NEVER commit .env.local to git
# 4. Keep your private keys secure
# 5. Use different keys for development and production
